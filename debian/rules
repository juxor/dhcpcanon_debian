#!/usr/bin/make -f
export PYBUILD_NAME=dhcpcanon
export PYBUILD_INSTALL_ARGS ?= --install-scripts=/sbin
%:
	dh $@ --with python3,sphinxdoc --buildsystem=pybuild

override_dh_auto_build:
	dh_auto_build
	PYTHONPATH=. http_proxy='127.0.0.1:9' sphinx-build -N -bhtml docs/source/ build/html # HTML generator

override_dh_auto_test:
	PYBUILD_TEST_ARGS="-svx {build_dir}/tests" dh_auto_test
