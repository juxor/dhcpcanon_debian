#!/usr/bin/make -f
export PYBUILD_NAME=dhcpcanon
%:
	dh $@ --with python3,sphinxdoc,systemd --buildsystem=pybuild

override_dh_auto_build:
	dh_auto_build
	PYTHONPATH=. http_proxy='127.0.0.1:9' sphinx-build -N -bhtml docs/source/ build/html # HTML generator

override_dh_installinit:
	dh_installinit -pdhcpcanon --no-start --noscripts

override_dh_enable:
	dh_systemd_enable -pdhcpcanon --no-enable

override_dh_systemd_start:
	dh_systemd_start -pdhcpcanon --no-restart-on-upgrade
	echo "Not running dh_systemd_start"
